<ots:LaneTypes xmlns:ots="http://www.opentrafficsim.org/ots" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.opentrafficsim.org/ots ../ots-definitions.xsd">

  <ots:LaneType Id="NL.TWO_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.ROAD_USER" Direction="FORWARD" />
  </ots:LaneType>

  <ots:LaneType Id="NL.PROVINCIAL_ROAD" Parent="NL.TWO_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.PEDESTRIAN" Direction="NONE" />
    <ots:Compatibility GtuType="NL.BICYCLE" Direction="NONE" />
  </ots:LaneType>

  <ots:LaneType Id="NL.RURAL_ROAD" Parent="NL.TWO_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.ROAD_USER" Direction="FORWARD" />
  </ots:LaneType>

  <ots:LaneType Id="NL.URBAN_ROAD" Parent="NL.TWO_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.ROAD_USER" Direction="FORWARD" />
  </ots:LaneType>

  <ots:LaneType Id="NL.RESIDENTIAL_ROAD" Parent="NL.TWO_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.ROAD_USER" Direction="FORWARD" />
  </ots:LaneType>

  <ots:LaneType Id="NL.ONE_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.ROAD_USER" Direction="FORWARD" />
  </ots:LaneType>

  <ots:LaneType Id="NL.FREEWAY" Parent="NL.ONE_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.PEDESTRIAN" Direction="NONE" />
    <ots:Compatibility GtuType="NL.BICYCLE" Direction="NONE" />
  </ots:LaneType>

  <ots:LaneType Id="NL.HIGHWAY" Parent="NL.ONE_WAY_LANE" Default="true">
    <ots:Compatibility GtuType="NL.PEDESTRIAN" Direction="NONE" />
    <ots:Compatibility GtuType="NL.BICYCLE" Direction="NONE" />
  </ots:LaneType>

  <ots:LaneType Id="NL.BUS_LANE" Default="true">
    <ots:Compatibility GtuType="NL.BUS" Direction="FORWARD" />
  </ots:LaneType>

  <ots:LaneType Id="NL.MOPED_PATH" Default="true">
    <ots:Compatibility GtuType="NL.BICYCLE" Direction="FORWARD" />
    <!-- a MOPED is a special BICYCLE -->
  </ots:LaneType>

  <ots:LaneType Id="NL.BICYCLE_PATH" Default="true">
    <ots:Compatibility GtuType="NL.BICYCLE" Direction="FORWARD" />
  </ots:LaneType>

  <ots:LaneType Id="NL.FOOTPATH" Default="true">
    <ots:Compatibility GtuType="NL.PEDESTRIAN" Direction="BOTH" />
  </ots:LaneType>

</ots:LaneTypes>
